<h2>Submit Review</h2>

<%= form_with(model: Review, url: create_path(@course), method: :post) do |f| %>
  <div class="form-group">
    <%= f.label :rating, "Rating (1-5)" %>
    <%= f.number_field :rating, class: "form-control", in: 1..5, required: true %>
  </div>
  <div class="form-group">
    <%= f.label :comment, "Review" %>
    <%= f.text_area :comment, class: "form-control", required: true %>
  </div>
  <%= f.submit "Submit Review", class: "btn btn-primary" %>
<% end %>