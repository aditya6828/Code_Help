<%= render 'shared/navbar' %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Courses Available</h1>

  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <% if course.video.attached? %>
            <video class="card-img-top" width="100%" height="225" controls>
              <source src="<%= url_for(course.video) %>" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          <% else %>
            <div class="text-center bg-light p-3">
              <p class="card-text">No video available for this course.</p>
            </div>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(course.price) %></p>

            <%= form_tag course_payment_path, method: 'post' do %>
              <script
                src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="pk_test_51OFcYISJZ1V84998Xv9GExYdIVk1cpXFYiSDaaFSXmDMG5vbAcXihmKlCGCx7gDW6mQpRib24qrNRNEUWPlr6UhB00ImETLIjp"
                data-description="<%= course.description %>"
                data-amount="<%= course.price * 100 %>"
                data-locale="auto"
                data-currency="inr">
              </script>
            <% end %>

            <%= button_to "Enroll Now", enroll_course_path(course), method: :post, class: "btn btn-primary mt-2 btn-block" %>
          </div>
          <%= link_to "Submit Review", review_course_path, class: "btn btn-primary" %>
        </div>
        
        
          
      </div>
    <% end %>
  </div>
</div>
